source 'http://rubygems.org'
# merge
gem 'rails', '3.0.3'
# postgresql
gem 'pg'
# layout of all forms
gem 'formtastic'
# layout only of application
gem 'nifty-generators'
# authentication
gem 'devise'
#xml parser
gem 'nokogiri'
# json parser
gem 'json'
# authorisation
gem 'declarative_authorization'

# paginate all index views
gem 'will_paginate','3.0.pre2'

# debug that works with ruby 1.9
gem 'ruby-debug19'
# using jquery for ajax, not prototype
gem 'jquery-rails'
#helps with I18n not used at present
gem 'routing-filter'

# tree control
gem 'acts_as_tree'
# contains sass
gem 'haml'

group :development, :test do
  gem 'webrat'
  # test server for rspec
  gem 'spork'
  # will document model according to migrations (actually according to schema)
  gem 'annotate-models'
  # generate test data
  gem 'faker'
  # generate test data
  gem 'factory_girl_rails'
end

group :development do
  gem 'rspec-rails'
  # for shared deployment
  gem 'heroku'

end