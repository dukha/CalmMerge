<%= semantic_form_for(@whiteboard) do |f| %>
  <%= f.error_messages %> 
  <% f.inputs do %>
    <%= f.input :whiteboard_type_id,  :as => :select, :collection =>  WhiteboardType.all.collect {|p| [ t($LU+"whiteboard_type."+p.translation_code), p.id ]}%>
    <%= f.input :info %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button  %>
  <% end %>
<% end %>
